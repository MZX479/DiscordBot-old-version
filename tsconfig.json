{
  "compilerOptions": {
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "strict": true
  },
  "exclude": ["dist"]
}
